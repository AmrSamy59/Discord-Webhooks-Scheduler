{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/index.js" }
    ],
    "builds": [
      { "src": "backend/index.js", "use": "@vercel/node" },
      { "src": "vite.config.js", "use": "@vercel/static-build" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/index.js" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }